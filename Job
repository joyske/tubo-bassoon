public class Job
{
    int h;
    int dl;

    public Job(int duration, int deadline)
    {   
        
        
        if(duration<=deadline)
        {
          h=duration;
          dl=deadline;
            
        }
        else
        {
        
            
                    System.out.println("Dauer muss kleiner als Deadline sein");
                }
    }
    
    public int getDuration()
    {
        return h;
    }
    public int getDeadline()
    {
        return dl;
    }
    public String toString()
    {
        String str="[" + h + "," + dl + "]";
        return str;
    }
    
}
